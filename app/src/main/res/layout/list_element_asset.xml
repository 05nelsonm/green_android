<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    android:elevation="4dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/windowBackground">

    <LinearLayout
        android:id="@+id/assetLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/buttonJungleGreen"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/assetIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/assetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/assetDomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_light"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/assetValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
